<!-- Page for creating a new listing.  -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <title>New Listing</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

<body>
  <header>
    <%- include('partials/_header') %>
  </header>
  <!--main-->
  <div class="container">
    <div class="py-5 text-center">
      <h2>Create a New Listing</h2>
    </div>

    <form class="login-form" method="POST" action="/createNewListing">
      <!-- Input box for the year field-->
      <div class="form-label-group">
        <input type="text" name="year" id="year" class="form-control" placeholder="Vehicle Year"required autofocus>
        <label for="inputYear">Year</label>
      </div>

      <!-- Input box for the make field-->
      <div class="form-label-group">
        <input type="text" name="make" id="make" class="form-control" placeholder="Vehicle Make"required autofocus>
        <label for="inputMake">Make</label>
      </div>

      <!-- Input box for the model field-->
      <div class="form-label-group">
        <input type="text" name="model" id="model" class="form-control" placeholder="Vehicle Model"required autofocus>
        <label for="inputModel">Model</label>
      </div>

       <!-- Input box for the mileage field-->
       <div class="form-label-group">
        <input type="text" name="mileage" id="mileage" class="form-control" placeholder="Vehicle Mileage"required autofocus>
        <label for="inputMileage">Mileage</label>
      </div>

      <!-- Input box for the price field-->
       <div class="form-label-group">
        <input type="text" name="price" id="price" class="form-control" placeholder="Vehicle Price"required autofocus>
        <label for="inputPrice">Price</label>
      </div>

      <!-- Input box for the description field-->
        <div class="form-label-group">
          <input type="text" name="description" id="description" class="form-control" placeholder="Vehicle Description"required autofocus>
          <label for="inputDescription">Description</label>
        </div>
      <!-- Choose picture file for submission.-->

        <input type="file" id="myFile" name="filename">
      <button class="btn btn-primary btn-lg btn-block" type="submit">Submit Listing</button>
    </form>

  </div>

  <!--footer-->
  <footer>
    <%- include('partials/_footer') %>
  </footer>

</body>

</html>
